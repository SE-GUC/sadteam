	<h3>{{viewTitle}}</h3>

	<form action="/user" method="POST" autocomplete="off">

		<div class="form-group">
			<label>FirstName</label>
			<input type="text" class="form-control" name="firstName" placeholder="firstName" value="{{user.firstName}}">
			<div class="text-danger"> 
				{{user.firstNameError}}</div>
		</div>

		<div class="form-group">
			<label>MiddleName</label>
			<input type="text" class="form-control" name="middleName" placeholder="middleName" value="{{user.middleName}}">
			<div class="text-danger"> 
				{{user.middleNameError}}</div>

		</div>

		<div class="form-group">
			<label>LastName</label>
			<input type="text" class="form-control" name="lastName" placeholder="lastName" value="{{user.lastName}}">
			<div class="text-danger"> 
				{{user.lastNameError}}</div>

		</div>

		<div class="form-group">
			<label>Age</label>
			<input type="number" class="form-control" name="age" placeholder="age" value="{{user.age}}">
			<div class="text-danger"> 
				{{user.ageError}}</div>

		</div>

		<div class="form-group">
			<label>BirthDate</label>
			<input type="date" class="form-control" name="birthDate" placeholder="birthDate" value="{{user.birthDate}}">
			<div class="text-danger"> 
				{{user.birthDateError}}</div>

		</div>

		<div class="form-group">
			<label>Email</label>
			<input type="text" class="form-control" name="email" placeholder="email" value="{{user.email}}">
			<div class="text-danger"> 
				{{user.emailError}}</div>

		</div>

		<div class="form-group">
			<label>Password</label>
			<input type="text" class="form-control" name="password" placeholder="password" value="{{user.password}}">
			<div class="text-danger"> 
				{{user.passwordError}}</div>

		</div>

		<div class="form-group">
			<label>EducationalBackground</label>
			<input type="text" class="form-control" name="educationalBackground" placeholder="educationalBackground" 
			value="{{user.educationalBackground}}">
			<div class="text-danger"> 
				{{user.educationalBackgroundError}}</div>

		</div>

		<div class="form-group">
			<label>Skills</label>
			<input type="text" class="form-control" name="skills" placeholder="skills" value="{{user.skills}}">
			<div class="text-danger"> 
				{{user.skillsError}}</div>

		</div>

		<div class="form-group">
			<label>Protofolio</label>
			<input type="text" class="form-control" name="protofolio" placeholder="protofolio" value="{{user.protofolio}}">
			<div class="text-danger"> 
				{{user.protofolioError}}</div>

		</div>

		<div class="form-group">
			<button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
		</div>
	</form>